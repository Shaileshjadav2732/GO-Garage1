<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".otpverification">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Enter your mobail number"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textColor="#000000"
            android:text="we'll send you a 4 digit OTP on your mobail number for verification"
            android:textSize="21sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="74dp"
                android:layout_height="wrap_content"

                android:backgroundTint="#E17F7E83"
                android:gravity="center"
                android:hint="9876543210"
                android:inputType="phone"
                android:padding="20dp"
                android:text="+91"
                android:textSize="20sp"
                android:textColor="#000000" />


            <EditText
                android:id="@+id/phone"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:textColorHint="#74000000"
                android:backgroundTint="#D9D1D1"
                android:ems="10"
                android:hint="9876543210"
                android:inputType="phone"
                android:padding="20dp"
                android:textColor="#000000"
                android:textSize="20sp" />


        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="Don't worry your number will not be sahred with anyone" />

        <Button
            android:id="@+id/getotp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#F80606"
            android:text="get otp"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>
    </ScrollView>

</LinearLayout>